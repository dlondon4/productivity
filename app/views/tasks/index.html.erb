<div class="page-header">
  <h1>Tasks</h1>
</div>

<p><a href="/tasks/new" class="btn btn-primary">Add a New Task</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Category</th>
      <th>Date</th>
      <th>Time</th>
      <th>Length</th>
      <th>Order</th>
      <th>Priority</th>
      <th>Repeat</th>
      <th>Notes</th>
      <th>Status</th>
      <th>Date complete</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user.first_name %> <%= task.user.last_name %></td>
        <td><%= task.name %></td>
        <td><%= task.category.name %></td>
        <td><%= task.date %></td>
        <td><%= task.time %></td>
        <td><%= task.length %></td>
        <td><%= task.order %></td>
        <td><%= task.priority %></td>
        <td><%= task.repeat %></td>
        <td><%= task.notes %></td>
        <td><%= task.status %></td>
        <td><%= task.date_complete %></td>
        <td>
          <a href="/tasks/<%= task.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/tasks/<%= task.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_task/<%= task.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

