<div class="page-header">
  <h1>Tasks <a href="/tasks/new" class="btn btn-success btn-xs"><i class="fa fa-plus-circle"></i></a></h1>
</div>

<!-- <p><a href="/tasks/new" class="btn btn-primary">Add a New Task</a></p> -->

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th><%= sort_link @search, :category, "Category" %></th>
      <th>Date</th>
      <th>Time</th>
      <th>Length</th>
      <th>Order</th>
      <th>Priority</th>
      <!-- <th>Repeat</th> -->
      <th>Notes</th>
      <!-- <th>Date complete</th> -->
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.category.name %></td>
        <td>
          <% if task.date.present? %>
            <%= task.date.strftime ('%A, %B %e, %Y') %>
          <% end %>
        </td>
        <td>
          <% if task.time.present? %>
            <%= task.time.strftime ('%I:%M%P') %>
          <% end %>
        </td>
        <td><%= task.length %></td>
        <td><%= task.order %></td>
        <td><%= task.priority %></td>
        <!-- <td><%= task.repeat %></td> -->
        <td><%= task.notes %></td>
        <!-- <td><%= task.date_complete %></td> -->
        <td>
          <a href="/tasks/<%= task.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/tasks/<%= task.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_task/<%= task.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

